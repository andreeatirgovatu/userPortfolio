{
  "env": {
    "es6": true,
    "node": true,
    "browser": true
  },
  "globals": {
    "exampleGlobalVariable": true
  },
  "rules": {
    "eqeqeq": 1,
    "no-console": 0,
    "indent": ["error", 2],
    "quotes": [2, "single"],
    "semi": [2, "always"]
  },
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module"
  },
  "plugins": []
}
